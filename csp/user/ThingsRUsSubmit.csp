<html>
<head>
<title>Things-R-Us Product Portal</title>

<!-- submit page for Product Portal -->

<style>

body {
	font-family: Comic Sans MS;
	font-size: 1.6em;
	width: 100%;
	filter:
		progid:DXImageTransform.Microsoft.Gradient(GradientType=0, StartColorStr='#A0FFA0', EndColorStr='#E0E0FF');
}

div.title {
	padding: 2px;
	font-size: 1.6em;
	border: 1px black solid;
	width: 100%;
	filter:
		progid:DXImageTransform.Microsoft.Gradient(GradientType=0, StartColorStr='#A0A0FF', EndColorStr='#E0FFFF')
		progid:DXImageTransform.Microsoft.dropShadow(color=#404040, OffX=2, OffY=2, Positive=2);
}

span.titleText {
	color: blue;
	width: 100%;
	filter:
		progid:DXImageTransform.Microsoft.dropShadow(color=#404040, OffX=2, OffY=2, Positive=2);
}

div.description {
	font-size: 1.6em;
	color: red;
}

div.copy {
	font-size: 0.6em;
	color: blue;
}

div.imageDiv {
}

pre {
	font-size: 0.6em;
	border: 1px black solid;
	color: red;
	background: white;
}

table.AutoFormTable {
	border: 1px black solid;
	color: blue;
	background: white;
}

table.AutoFormTable td {
	font-size: 1.0em;
	padding: 2px;
	border: 1px gray solid;
	color: blue;
	padding-right: 4px;
	padding-left: 4px;
}

table.AutoFormTable td.label {
	font-size: 1.0em;
	padding: 2px;
	border: 1px gray solid;
	color: black;
	padding-right: 4px;
	padding-left: 4px;
}

table.formTable {
	border: 1px black solid;
}

input {
	font-family: Comic Sans MS;
	color: blue;
}

select {
	font-family: Comic Sans MS;
	color: blue;
}

</style>
<script language="javascript">
</script>

</head>

<body>
<div class="title"><span class="titleText">Thank you for ordering Things-R-Us<super>&trade;</super> Products!</span></div>

<script language="cache" runat="server">
	// process the submit for this page
	Set tSC=$$$OK
	Do {
		Set tSC = ##class(Ens.Director).CreateBusinessService("Order via Web Portal",.tService)
		If ($$$ISERR(tSC)) Quit

		Set tSC = tService.ProcessInput(%request,.confirmation)
		If ($$$ISERR(tSC)) Quit
		If $IsObject($G(confirmation)) {
			// draw details of con
			&html<
			<div align="center">
			<div>#(confirmation.Message)#</div>
			<br>
			>
			
			If (confirmation.Ordered) {
				&html<<div>Details</div>>
				&html<
				<table class="AutoFormTable" border="0" cellspacing="0">
<tr><td class="label">OrderNumber</td>		<td>#(confirmation.OrderNumber)#</td></tr>
<tr><td class="label">Name</td>		<td>#(confirmation.Name)#</td></tr>
<tr><td class="label">City</td>		<td>#(confirmation.City)#</td></tr>
<tr><td class="label">Product</td>	<td>#(confirmation.Product)#</td></tr>
<tr><td class="label">Shipping Method</td><td>#(confirmation.ShippingMethod)#</td></tr>
<tr><td class="label">Shipping Method</td><td>#(confirmation.ShippingCompany)#</td></tr>
<tr><td class="label">Tracking Number</td><td>#(confirmation.TrackingNumber)#</td></tr>
<tr><td class="label">Quantity</td>	<td align="right">#(confirmation.Quantity)#&nbsp;</td></tr>
<tr><td class="label">Unit Price</td>	<td align="right">$#($FN(confirmation.UnitPrice,",",2))#&nbsp;</td></tr>
<tr><td class="label">Discount</td>	<td align="right">#($FN(confirmation.Discount,",",2))#%</td></tr>

<tr><td class="label">Subtotal</td>		<td align="right">$#($FN(confirmation.SubTotal,",",2))#&nbsp;</td></tr>
<tr><td class="label">Shipping Charge</td><td align="right">$#($FN(confirmation.Shipping,",",2))#&nbsp;</td></tr>
<tr><td class="label"><b>Total</b></td>	<td align="right"><b>$#($FN(confirmation.TotalPrice,",",2))#&nbsp;</b></td></tr>

				</table>
				>
				//	Do confirmation.DrawHTMLTable(confirmation)
				&html<</div>>
			}
		}
	} While (0)

	If ($$$ISERR(tSC)) {
		// Error: assume system is not running
		Write "The Things-R-Us Portal is currently not accepting requests.<br>",!
		Write "Please try again later.",!
		
		Write "<br><br><pre>"
		Do $system.Status.DisplayError(tSC)
		Write "</pre>"
	}	
</script>

<hr>
<div align="center"><a href="ThingsRUsPortal.csp">back</a></div>
</body>
</html>
